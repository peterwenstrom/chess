<Page x:Class="Chess.GUI.MainMenuPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Chess"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="Main Menu">

    <Grid Margin="10,0,10,10">
        <Grid.Background>
            <ImageBrush ImageSource="Images/chessBackground.jpeg"/>
        </Grid.Background>
        
        <Button Margin="100,40,0,0" Width="125" Height="25" Click="NewGameClick"
                VerticalAlignment="Top" HorizontalAlignment="Left">New Game</Button>
        <Button Margin="100,80,0,0" Width="125" Height="25" Click="ResumeGameClick"
                VerticalAlignment="Top" HorizontalAlignment="Left">Resume Game</Button>
        <Button Margin="100,120,0,0" Width="125" Height="25" Click="LoadGameClick"
                VerticalAlignment="Top" HorizontalAlignment="Left">Load Game</Button>
        <Button Margin="0,40,100,0" Width="125" Height="25" Click="ExitGameClick"
                VerticalAlignment="Top" HorizontalAlignment="Right">Exit Game</Button>
    </Grid>
</Page>
